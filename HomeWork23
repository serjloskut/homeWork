using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.IO;

namespace HomeWork1
{
    class Program
    {
        static void Main(string[] args)
        {
            int[,] array = new int[10, 10];
            Random random = new Random();

            for (int i = 0; i < array.GetLength(0); i++)
            {
                for (int j = 0; j < array.GetLength(1); j++)
                {
                    array[i, j] = random.Next(10, 100);
                }
            }

            OutputArray(array);
            Console.WriteLine();
            Shuffle(array);
            OutputArray(array);
            Console.ReadKey();
        }

        static void OutputArray(int[,] array)
        {
            for (int i = 0; i < array.GetLength(0); i++)
            {
                for (int j = 0; j < array.GetLength(1); j++)
                    Console.Write(array[i, j] + " ");

                Console.WriteLine();
            }
        }

        static void Shuffle(int[,] array)
        {
            int rowArrayFrom;
            int rowArrayTo;
            int colomnArrayFrom;
            int colomnArrayTo;
            int elementArrayFrom;
            int elementArrayTo;
            int tempElementArray;
            Random random = new Random();

            for (int col = 0; col < 100; col++)
            {
                switch (random.Next(1, 4))
                {
                    case 1:
                        rowArrayFrom = random.Next(0, array.GetLength(0));
                        rowArrayTo = random.Next(0, array.GetLength(0));

                        for (int i = 0; i < array.GetLength(1); i++)
                        {
                            tempElementArray = array[rowArrayTo, i];
                            array[rowArrayTo, i] = array[rowArrayFrom, i];
                            array[rowArrayFrom, i] = tempElementArray;
                        }
                        break;
                    case 2:
                        colomnArrayFrom = random.Next(0, array.GetLength(1));
                        colomnArrayTo = random.Next(0, array.GetLength(1));

                        for (int i = 0; i < array.GetLength(0); i++)
                        {
                            tempElementArray = array[i, colomnArrayTo];
                            array[i, colomnArrayTo] = array[i, colomnArrayFrom];
                            array[i, colomnArrayFrom] = tempElementArray;
                        }
                        break;
                    case 3:
                        elementArrayFrom = array[random.Next(0, array.GetLength(0)), random.Next(0, array.GetLength(1))];
                        elementArrayTo = array[random.Next(0, array.GetLength(0)), random.Next(0, array.GetLength(1))];
                        tempElementArray = elementArrayTo;
                        elementArrayTo = elementArrayFrom;
                        elementArrayFrom = elementArrayTo;
                        break;
                }
            }
        }
    }
}
