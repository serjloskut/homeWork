using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HomeWork1
{
    class Program
    {
        static void Main(string[] args)
        {
            string nameUser, symbolEdging;
            Console.WriteLine("Введите имя:");
            nameUser = Console.ReadLine();
            Console.WriteLine("Введите символ:");
            symbolEdging = Console.ReadLine();

            for (int i = -1; i <= nameUser.Length; i++)
                Console.Write(symbolEdging);
            Console.WriteLine("\n{0}{1}{0}", symbolEdging, nameUser);
            for (int i = -1; i <= nameUser.Length; i++)
                Console.Write(symbolEdging);
            Console.ReadKey();
        }
    }
}
