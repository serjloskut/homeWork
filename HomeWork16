using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HomeWork1
{
    class Program
    {
        static void Main(string[] args)
        {
            int maxElement = int.MinValue;
            int rowMaxElement = 0; int columnMaxElement = 0;
            int rowArrayHomework = 10; int colomnArrayHomework = 10;
            int[,] arrayHomework = new int[rowArrayHomework,colomnArrayHomework];
            Random randomElement = new Random();

            Console.SetCursorPosition(0, 2);
            Console.WriteLine("Исходная матрица:");

            for (int i = 0; i < arrayHomework.GetLength(0); i++)
            {
                for (int j = 0; j < arrayHomework.GetLength(1); j++)
                {
                    arrayHomework[i, j] = randomElement.Next(1, 11);
                    Console.Write(arrayHomework[i, j] + " ");

                    if (maxElement < arrayHomework[i, j]) maxElement = arrayHomework[i, j];
                }
                Console.WriteLine();
            }

            Console.SetCursorPosition(0, 0);
            Console.Write($"Максимальный элемент в матрице равен {maxElement}");
            Console.SetCursorPosition(0, arrayHomework.GetLength(0) + 4);
            Console.WriteLine("Полученная матрица:");

            for (int i = 0; i < arrayHomework.GetLength(0); i++)
            {
                for (int j = 0; j < arrayHomework.GetLength(1); j++)
                {
                    if (arrayHomework[i, j] == maxElement)
                    {
                        arrayHomework[i, j] = 0;
                    }

                    Console.Write(arrayHomework[i, j] + " ");
                }
                Console.WriteLine();
            }
            Console.ReadKey();
        }
    }
}
