using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HomeWork1
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] arrayHomework = new int[10];
            Random randomElement = new Random();

            for (int i = 0; i < arrayHomework.Length; i++)
            {
                arrayHomework[i] = randomElement.Next(10,100);

                if (i == 0)
                {
                    if (arrayHomework[i] > arrayHomework[i + 1])
                        Console.Write(arrayHomework[i] + " ");
                }

                else if (i == (arrayHomework.Length - 1))
                {
                    if (arrayHomework[i] > arrayHomework[i - 1])
                        Console.Write(arrayHomework[i] + " ");
                }

                else
                {
                    if (arrayHomework[i] > arrayHomework[i - 1] && arrayHomework[i] > arrayHomework[i + 1])
                        Console.Write(arrayHomework[i] + " ");
                }
            }
            Console.ReadKey();
        }
    }
}
