using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HomeWork1
{
    class Program
    {
        static void Main(string[] args)
        {
            int userOld, userWeight, userHeight;
            string userCity, userZodiac, userName;
            Console.WriteLine("Как Вас зовут?");
            userName = Console.ReadLine();
            Console.WriteLine("Сколько Вам полных лет?");
            userOld = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Какой у Вас знак зодиака?");
            userZodiac = Console.ReadLine();
            Console.WriteLine("Какой у Вас рост в см.?");
            userHeight = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Какой у Вас вес в кг.?");
            userWeight = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Как называется город, в котором Вы живете");
            userCity = Console.ReadLine();
            Console.WriteLine("Вас зовут {0}, живете в г.{1}. Вам {2} лет и вы по зодиаку {3}. Ваш рост {4}см., а вес {5}кг.", userName, userCity, userOld, userZodiac, userHeight, userWeight);
            Console.ReadKey();
        }
    }
}
